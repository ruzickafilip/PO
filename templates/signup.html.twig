<div id="signup" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Registrace</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
      <div class="alert alert-dark" id="signup-alert" role="alert" style="display: none;">
      </div>
      <div class="form-group">
          <label for="email">Email:</label>
          <input type="email" class="form-control" id="email-input">
      </div>
      <div class="form-group">
          <label for="pwd">Heslo:</label>
          <input type="password" class="form-control" id="pwd-input">
      </div>
      <div class="form-group">
          <label for="pwd">Potvrzení hesla:</label>
          <input type="password" class="form-control" id="pwdconfirm-input" >
      </div>
      <div class="form-group">
          <label for="role">Role:</label>
          <select class="form-control" id="role-input">
            <option id="Tajemník" selected>Tajemník</option>
          </select>
      </div>
      <button type="submit" id="btn-signup" class="btn btn-dark pull-right">Registrovat</button>
      <button type="button" class="btn btn-dark pull-right" data-dismiss="modal">Zavřít</button>
      </div>
    </div>
  </div>
</div>